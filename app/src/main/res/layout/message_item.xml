<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background_other"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:id="@+id/message_layout_left"
        android:orientation="vertical">
        <TextView
            android:id="@+id/author_textview_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/message_textview_left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:id="@+id/message_layout_right">
        <TextView
            android:id="@+id/author_textview_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E0E0E0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/message_textview_right"/>
    </LinearLayout>

</RelativeLayout>